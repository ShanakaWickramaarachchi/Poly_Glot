<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.polyglot.Greeting_people_sinhala">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="0dp"
        android:elevation="0dp"
        android:background="#29B4E5"
        android:onClick="xxx"
        android:id="@+id/ww">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lesson 1"
            android:textSize="30dp"
            android:paddingLeft="75dp"
            android:textColor="@color/material_blue_grey_800"
            android:layout_gravity="center"
            android:id="@+id/lesson1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Greeting People"
            android:paddingBottom="30dp"
            android:textSize="17dp"
            android:paddingLeft="85dp"
            android:layout_below="@+id/lesson1"
            android:layout_gravity="center_horizontal|bottom"
            />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick=""
            android:id="@+id/button1"
            android:background="@layout/oval2"
            android:layout_gravity="left|top"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="30dp"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ww"
        android:background="#92d9f2">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:onClick="frame1">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick=""
            android:id="@+id/button2"
            android:background="@layout/oval2"

            android:layout_marginTop="17dp"
            android:layout_below="@+id/ww"
            android:layout_marginLeft="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nice to meet you"
            android:id="@+id/textView7"
            android:layout_marginTop="59dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center_horizontal|top" />
        </FrameLayout>
    </FrameLayout>
</RelativeLayout>
